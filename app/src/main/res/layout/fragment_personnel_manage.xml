<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:background="@color/bg_blue">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/projectNameTv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginLeft="20dp"
                    android:text="@string/home_gradle"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/weekTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="星期二"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/weekTv"
                    android:text="04月30日" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/dp_20">

                <RelativeLayout
                    android:id="@+id/face_attendance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_kuang_radius">

                    <ImageView
                        android:id="@+id/icon_face"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_face_attendance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_face"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="人员登记" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/real_name_registration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_kuang_radius">

                    <ImageView
                        android:id="@+id/icon_registration"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_real_name_registration" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_registration"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="访客登记" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personnel_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_kuang_radius">

                    <ImageView
                        android:id="@+id/icon_personnal_info"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_personnel_info" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_personnal_info"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="信息查询" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="人员出入情况"
                    android:textSize="16sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/workerAttencePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/app_unll"
                    android:textColor="@color/text_green"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dp_20">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="人员总数"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/workerTotalNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="今日进"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/workerPresentNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_yellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="今日出"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/todayAttenceWorkerNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_green" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="访客出入情况"
                    android:textSize="16sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/managerPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/app_unll"
                    android:textColor="@color/text_green"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="访客总数"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/totalManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="访客进"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/managerPresent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_yellow" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:text="访客出"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/todayAttenceManagerNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:text="@string/app_unll"
                        android:textColor="@color/text_blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/icon_up_green" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
